<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="112dp"
        android:layout_width="363dp"
        tools:text="@string/title_string"
        android:text="@string/title_string"
        android:typeface="sans"
        android:textSize="26sp"
        android:textColor="@android:color/holo_red_light"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:layout_marginTop="40dp"
        android:layout_margin="30dp"
        android:id="@+id/title"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Click the spot of where you want to go on the grid."
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/Instructions1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="The computer is playing against you as O."
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/Instructions2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Instructions1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=" To win you must get three X in a row."
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/Instructions3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Instructions2"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:layout_margin="40dp"
        android:id="@+id/enter_name"
        tools:layout_editor_absoluteY="174dp"
        tools:layout_editor_absoluteX="36dp"
        android:hint="@string/enter_name"
        android:ems="10"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <Button
        android:layout_height="60dp"
        android:layout_width="150dp"
        android:text="Start"
        android:layout_marginTop="32dp"
        android:id="@+id/start_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>